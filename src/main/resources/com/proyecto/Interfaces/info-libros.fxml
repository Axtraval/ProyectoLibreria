<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.proyecto.Controllers.InfoLibro.HelloController_InfoLibro">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ListView fx:id="librosList" prefWidth="400" prefHeight="200"/>
    <Label fx:id="welcomeText"/>
    <Button text="Ver info" onAction="#onMostrarLibrosClick"/>
</VBox>
