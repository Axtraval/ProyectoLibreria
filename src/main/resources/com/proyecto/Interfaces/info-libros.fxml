<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.proyecto.Controllers.InfoLibro.HelloController_InfoLibro">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <ListView fx:id="librosList" prefHeight="200" prefWidth="400" />

    <Label fx:id="welcomeText" />

    <Button text="Ver info" onAction="#onMostrarLibrosClick">
        <font>
            <Font name="System Bold" size="13.0" />
        </font>
    </Button>

    <Button text="Volver"
            onAction="#onVolverClick"
            style="-fx-background-color: #2c6cff;"
            textFill="WHITE">
        <font>
            <Font name="System Bold" size="13.0" />
        </font>
    </Button>

</VBox>