<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyecto.Controllers.Crud_Lectura.HelloControllerLibro_dsh">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

        <Button onAction="#onIlustradoClick" prefWidth="120" style="-fx-background-color: #6a1b9a; -fx-text-fill: white; -fx-font-weight: bold;" text="Publicar Ilustrado" />


    <TableView fx:id="tablaLibros" prefHeight="250" prefWidth="650">
        <columns>
            <TableColumn fx:id="colId" prefWidth="60" text="ID" />
            <TableColumn fx:id="colTitulo" prefWidth="150" text="Título" />
            <TableColumn fx:id="colAnio" prefWidth="80" text="Año" />
            <TableColumn fx:id="colAutor" prefWidth="120" text="Autor" />
            <TableColumn fx:id="colGenero" prefWidth="120" text="Género" />
            <TableColumn fx:id="colPuntos" prefWidth="80" text="Puntos" />
        </columns>
    </TableView>

    <Label text="Material de Lectura">
        <font>
            <Font size="15.0" />
        </font>
    </Label>


    <TextField fx:id="txtTitulo" prefWidth="300" promptText="Título del libro" />
    <TextField fx:id="txtAnio" prefWidth="300" promptText="Año de publicación" />
    <TextField fx:id="txtAutor" prefWidth="300" promptText="Autor" />
    <TextField fx:id="txtGenero" prefWidth="300" promptText="Género" />
    <TextField fx:id="txtPuntos" prefWidth="300" promptText="Puntos" />


    <HBox alignment="CENTER" spacing="15">

        <Button onAction="#onPublicarClick" prefWidth="120" style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold;" text="Publicar" />

        <Button onAction="#onModificarClick" prefWidth="120" style="-fx-background-color: #f9a825; -fx-text-fill: white; -fx-font-weight: bold;" text="Modificar" />

        <Button onAction="#onEliminarClick" prefWidth="120" style="-fx-background-color: #c62828; -fx-text-fill: white; -fx-font-weight: bold;" text="Eliminar" />

        <Button onAction="#onMostrarClick" prefWidth="130" style="-fx-background-color: #1565c0; -fx-text-fill: white; -fx-font-weight: bold;" text="Mostrar Libros" />

    </HBox>

</VBox>
