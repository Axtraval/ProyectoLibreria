<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyecto.Controllers.Crud_Lectura.HelloController_dsh">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- ================= TABLA ================= -->

    <TableView fx:id="tablaLibros" prefHeight="250" prefWidth="650">

        <columns>
            <TableColumn fx:id="colId" prefWidth="60" text="ID" />
            <TableColumn fx:id="colTitulo" prefWidth="150" text="Título" />
            <TableColumn fx:id="colAnio" prefWidth="80" text="Año" />
            <TableColumn fx:id="colAutor" prefWidth="120" text="Autor" />
            <TableColumn fx:id="colGenero" prefWidth="120" text="Género" />
            <TableColumn fx:id="colPuntos" prefWidth="80" text="Puntos" />
        </columns>

    </TableView>

    <!-- ================= FORMULARIO ================= -->

    <TextField fx:id="txtTitulo" prefWidth="300" promptText="Título del libro" />

    <TextField fx:id="txtAnio" prefWidth="300" promptText="Año de publicación" />

    <TextField fx:id="txtAutor" prefWidth="300" promptText="Autor" />

    <TextField fx:id="txtGenero" prefWidth="300" promptText="Género" />

    <TextField fx:id="txtPuntos" prefWidth="300" promptText="Puntos" />

    <!-- ================= BOTONES ================= -->

    <HBox alignment="CENTER" spacing="15">

        <Button onAction="#onPublicarClick" style="-fx-background-color: green;" text="Publicar" textFill="WHITE" />

        <Button onAction="#onModificarClick" text="Modificar" />

        <Button onAction="#onEliminarClick" style="-fx-background-color: #970808;" text="Eliminar" textFill="WHITE" />

        <Button onAction="#onMostrarClick" style="-fx-background-color: #2c6cff;" text="Mostrar Libros" textFill="WHITE" />

    </HBox>

</VBox>
