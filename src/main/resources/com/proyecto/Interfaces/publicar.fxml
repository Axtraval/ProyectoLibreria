<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.proyecto.Controllers.Crud_Lectura.HelloController_dsh">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>

    <Label text="Gestor de Publicaciones" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TableView fx:id="tablaLibros" prefHeight="200">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50" />
            <TableColumn fx:id="colTitulo" text="Título del Libro" prefWidth="250" />
        </columns>
    </TableView>

    <TextField fx:id="txtTitulo" promptText="Escribe el título aquí..."/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Publicar" onAction="#onPublicarClick" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
        <Button text="Modificar" onAction="#onModificarClick" />
        <Button text="Eliminar" onAction="#onEliminarClick" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
    </HBox>
</VBox>