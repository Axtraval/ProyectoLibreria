<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.proyecto.Controllers.Crud_Lectura.HelloController_dsh">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- ================= TABLA ================= -->

    <TableView fx:id="tablaLibros"
               prefHeight="250"
               prefWidth="650">

        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colTitulo" text="Título" prefWidth="150"/>
            <TableColumn fx:id="colAnio" text="Año" prefWidth="80"/>
            <TableColumn fx:id="colAutor" text="Autor" prefWidth="120"/>
            <TableColumn fx:id="colGenero" text="Género" prefWidth="120"/>
            <TableColumn fx:id="colPuntos" text="Puntos" prefWidth="80"/>
        </columns>

    </TableView>

    <!-- ================= FORMULARIO ================= -->

    <TextField fx:id="txtTitulo"
               promptText="Título del libro"
               prefWidth="300"/>

    <TextField fx:id="txtAnio"
               promptText="Año de publicación"
               prefWidth="300"/>

    <TextField fx:id="txtAutor"
               promptText="Autor"
               prefWidth="300"/>

    <TextField fx:id="txtGenero"
               promptText="Género"
               prefWidth="300"/>

    <TextField fx:id="txtPuntos"
               promptText="Puntos"
               prefWidth="300"/>

    <!-- ================= BOTONES ================= -->

    <HBox alignment="CENTER" spacing="15">

        <Button text="Publicar"
                onAction="#onPublicarClick"
                style="-fx-background-color: green;"
                textFill="WHITE"/>

        <Button text="Modificar"
                onAction="#onModificarClick"/>

        <Button text="Eliminar"
                onAction="#onEliminarClick"
                style="-fx-background-color: #970808;"
                textFill="WHITE"/>

        <Button text="Mostrar Libros"
                onAction="#onMostrarClick"
                style="-fx-background-color: #2c6cff;"
                textFill="WHITE"/>

    </HBox>

</VBox>