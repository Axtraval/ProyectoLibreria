<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyecto.Controllers.Crud_Lectura.HelloController_Ilustrado">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <TableView fx:id="tablaLibros" prefHeight="300" prefWidth="700">

        <columns>
            <TableColumn fx:id="colTitulo" prefWidth="120" text="Título" />
            <TableColumn fx:id="colAnio" prefWidth="70" text="Año" />
            <TableColumn fx:id="colAutor" prefWidth="120" text="Autor" />
            <TableColumn fx:id="colGenero" prefWidth="100" text="Género" />
            <TableColumn fx:id="colPuntos" prefWidth="70" text="Puntos" />
            <TableColumn fx:id="colAcolor" prefWidth="80" text="A color" />
            <TableColumn fx:id="colFrecuencia" prefWidth="90" text="Frecuencia" />
        </columns>

    </TableView>

    <Label text="Material Ilustrado">
        <font>
            <Font size="14.0" />
        </font>
    </Label>

    <GridPane hgap="10" vgap="10">
        <TextField fx:id="txtTitulo" prefHeight="26.0" prefWidth="607.0" promptText="Título" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <TextField fx:id="txtAnio" promptText="Año de Publicación" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="txtAutor" promptText="Autor" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <TextField fx:id="txtGenero" promptText="Género" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <TextField fx:id="txtPuntos" promptText="Puntos" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <TextField fx:id="txtFrecuencia" promptText="Frecuencia" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="¿A color?" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <CheckBox fx:id="checkAcolor" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>

    </GridPane>

    <HBox alignment="CENTER" spacing="15">

        <Button text="Publicar"
                onAction="#onPublicarClick"
                prefWidth="120"
                style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold;" />

        <Button text="Modificar"
                onAction="#onModificarClick"
                prefWidth="120"
                style="-fx-background-color: #f9a825; -fx-text-fill: white; -fx-font-weight: bold;" />

        <Button text="Eliminar"
                onAction="#onEliminarClick"
                prefWidth="120"
                style="-fx-background-color: #c62828; -fx-text-fill: white; -fx-font-weight: bold;" />

        <Button text="Mostrar Libros"
                onAction="#onMostrarClick"
                prefWidth="130"
                style="-fx-background-color: #1565c0; -fx-text-fill: white; -fx-font-weight: bold;" />

        <Button text="Volver"
                onAction="#onVolverClick"
                prefWidth="120"
                style="-fx-background-color: #424242; -fx-text-fill: white; -fx-font-weight: bold;" />

    </HBox>
</VBox>
